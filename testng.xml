<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- Enabled parallel execution at the methods level with a conservative thread count for local runs. -->
<suite name="Selenium POM Framework Test Suite" parallel="methods" thread-count="1">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.automation.listeners.AllureScreenshotListener"/>
        <listener class-name="com.automation.listeners.TestListener"/>
    </listeners>

    <test name="Login Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.automation.tests.LoginTest"/>
        </classes>
    </test>

</suite>
